<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".Dashboard2">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffff"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginLeft="0dp"
                android:background="#DE5DF4"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="295dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="34dp"

                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="44dp"
                    android:text="Games Category"

                    android:textSize="30sp" />

            </LinearLayout>


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:alignmentMode="alignMargins"
                android:background="#ffff"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:rowCount="1">


                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="202dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:background="#ffff"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:onClick="warGames"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="126dp"
                            android:layout_height="121dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:src="@drawable/war"
                            app:civ_border_color="#DE5DF4"
                            app:civ_border_width="2dp"
                            tools:layout_editor_absoluteX="142dp"
                            tools:layout_editor_absoluteY="168dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="23dp"
                            android:layout_below="@+id/text1"
                            android:layout_gravity="center"
                            android:text="War Games"
                            android:textSize="13dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="202dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:background="#ffff"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:onClick="racingGames"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="126dp"
                            android:layout_height="121dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:src="@drawable/racing"
                            app:civ_border_color="#DE5DF4"
                            app:civ_border_width="2dp"
                            tools:layout_editor_absoluteX="142dp"
                            tools:layout_editor_absoluteY="168dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="23dp"
                            android:layout_gravity="center"
                            android:text="Racing Games"
                            android:textSize="13dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="202dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:onClick="actionGames"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="126dp"
                            android:layout_height="121dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:onClick="actionGames"
                            android:src="@drawable/action"
                            app:civ_border_color="#DE5DF4"
                            app:civ_border_width="2dp"
                            tools:layout_editor_absoluteX="142dp"
                            tools:layout_editor_absoluteY="168dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="23dp"
                            android:layout_gravity="center"
                            android:text="Action Games"
                            android:textSize="13dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </GridLayout>
        </LinearLayout>


    </ScrollView>

</RelativeLayout>