<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePassword">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="#DE5DF4"
        android:layout_marginLeft="0dp"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="18dp"
            android:src="@drawable/back"
            app:civ_border_color="#ff8040"
            app:civ_border_width="2dp"
            android:layout_marginTop="16dp"
            android:onClick="backLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="168dp" />



        <TextView
            android:textColor="#ffff"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_marginTop="12dp"
            android:text="Reset password"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_height="wrap_content" />


    </LinearLayout>




    <TextView
        android:id="@+id/dfsg"
        android:textColor="#000000"
        android:layout_width="123dp"
        android:padding="10dp"
        android:layout_marginTop="153dp"
        android:text="Email:"
        android:gravity="center"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/txtViewEmail"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="153dp"
        android:layout_marginLeft="65dp"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#000000" />


    <EditText
        android:id="@+id/etResetPassword"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_below="@+id/dfsg"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="10dp"
        android:alpha="0.23"
        android:background="@drawable/inputtext"
        android:drawableLeft="@drawable/lock"
        android:inputType="textEmailAddress"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnSendRequest"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etResetPassword"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape"
        android:layout_marginLeft="97dp"
        android:onClick="reset"
        android:padding="16dp"
        android:text="Reset"
        android:textAllCaps="false" />

</RelativeLayout>